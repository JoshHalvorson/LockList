<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="InfoAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertNegativeButtonStyle</item>
    </style>

    <style name="AlertPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="AlertNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="AlertDialogLogOut" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertNegativeButtonStyle</item>
    </style>

    <style name="AlertLogOutPositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="AlertLogOutNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>

    <style name="MaterialHintColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MaterialErrorColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
